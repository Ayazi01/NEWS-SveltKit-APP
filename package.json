{
	"name": "news-sveltekit-app",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@storybook/addon-essentials": "^7.0.0-beta.45",
		"@storybook/addon-interactions": "^7.0.0-beta.45",
		"@storybook/addon-links": "^7.0.0-beta.45",
		"@storybook/blocks": "^7.0.0-beta.45",
		"@storybook/svelte": "^7.0.0-beta.45",
		"@storybook/sveltekit": "^7.0.0-beta.45",
		"@storybook/testing-library": "^0.0.14-next.1",
		"@storybook/types": "7.0.0-alpha.44",
		"@sveltejs/adapter-auto": "^1.0.3",
		"@sveltejs/kit": "^1.5.2",
		"@tailwindcss/typography": "^0.5.9",
		"@typescript-eslint/eslint-plugin": "^5.51.0",
		"@typescript-eslint/parser": "^5.51.0",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-storybook": "^0.6.10",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.21",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.4",
		"prettier-plugin-svelte": "^2.9.0",
		"prettier-plugin-tailwindcss": "^0.2.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook": "^7.0.0-beta.45",
		"svelte": "^3.55.1",
		"svelte-check": "^3.0.3",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "^3.2.6",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"vite": "^4.1.1"
	},
	"type": "module",
	"dependencies": {
		"@storybook/addon-svelte-csf": "^2.0.11"
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix",
		"*.{js,css,md}": "prettier --write"
	}
